<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/circular_bg"
        android:backgroundTint="@color/colorIcon"
        android:src="@drawable/person_icon"
        android:scaleType="centerCrop"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/profile_username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="5dp"
        android:hint="Username"
        android:textColorHint="@color/colorIcon"
        android:padding="10dp"
        android:inputType="text"
        android:textColor="@color/colorIcon"
        tools:ignore="HardcodedText"/>

    <EditText
        android:id="@+id/profile_phone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="5dp"
        android:hint="Phone"
        android:textColorHint="@color/colorIcon"
        android:padding="10dp"
        android:inputType="phone"
        android:textColor="@color/colorIcon"
        tools:ignore="HardcodedText"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_rounded_corner"
            app:backgroundTint="@color/colorSectionName"
            android:text="Update Profile"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            tools:ignore="HardcodedText"
            android:id="@+id/profile_update_btn"/>

        <ProgressBar
            android:id="@+id/profile_progress_bar"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:indeterminateTint="@color/colorSectionName"
            android:layout_gravity="center" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Log Out"
        android:textColor="@color/colorIcon"
        android:textSize="20sp"
        android:background="@drawable/curved_square"
        android:padding="10dp"
        android:id="@+id/logout_btn"/>

</LinearLayout>